{
  "name": "raypx-kit",
  "version": "0.0.0",
  "private": true,
  "description": "Essential infrastructure packages for Raypx projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/raypx/raypx-kit.git"
  },
  "license": "Apache-2.0",
  "author": "Raypx Team",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "release": "pnpm build && pnpm test && pnpm changeset version && pnpm changeset publish && git push --follow-tags",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@changesets/cli": "^2.29.7",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.1"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  }
}
